<Window x:Class="PR2Meshkov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR2Meshkov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
         
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>  
            <RowDefinition Height="Auto"/> 
        </Grid.RowDefinitions>

        
        <TextBlock Text="Вариант 10" 
                   FontSize="32" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>

        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Задача 1" Width="100" Margin="5" Click="Button_Click"/>
            <Button Content="Задача 2" Width="100" Margin="5" Click="Button_Click_1"/>
            <Button Content="Задача 3" Width="100" Margin="5" Click="Button_Click_2"/>
            <Button Content="Задача 4" Width="100" Margin="5" Click="Button_Click_3"/>
            <Button Content="Задача 5" Width="100" Margin="5" Click="Button_Click_4"/>
        </StackPanel>
    </Grid>
</Window>
